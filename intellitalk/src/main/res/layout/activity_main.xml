<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@id/queueBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <view
            android:id="@id/wordQueue"
            style="@style/TwoWay"
            class="org.lucasr.twowayview.TwoWayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/playButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@id/playButton"
            android:layout_toLeftOf="@id/clearButton" />

        <ImageButton
            android:id="@id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:onClick="play"
            android:src="@drawable/play" />

        <ImageButton
            android:id="@id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/wordQueue"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@id/wordQueue"
            android:layout_toLeftOf="@id/playButton"
            android:onClick="clear"
            android:src="@drawable/clear" />
    </RelativeLayout>

    <GridView
        android:id="@id/commonPhraseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/queueBar"
        android:columnWidth="85dp"
        android:numColumns="auto_fit" />

</RelativeLayout>